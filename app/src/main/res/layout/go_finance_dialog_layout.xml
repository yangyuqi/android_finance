<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:paddingLeft="@dimen/space_5"
        android:orientation="vertical"
        android:layout_centerInParent="true"
        android:background="@color/bg_main"
        android:layout_width="280dp"
        android:layout_height="290dp">

        <TextView
            android:textColor="@color/text_drak_black"
            android:textSize="@dimen/text_size_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="投资"
            android:paddingTop="@dimen/space_10"
            />

        <LinearLayout
            android:paddingBottom="@dimen/space_10"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:paddingRight="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_10"
            >
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="手机号码"
                android:textColor="@color/text_drak_black"
                android:textSize="@dimen/text_size_14"
                android:paddingLeft="@dimen/space_15"
                />

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/text_drak_black"
                android:textSize="@dimen/text_size_13"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                />

            <Button
                android:id="@+id/btn_send"
                android:paddingRight="@dimen/space_15"
                android:background="@drawable/send_code_bg"
                android:layout_width="80dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:text="获取验证码"
                android:textColor="@color/bg_main"
                android:textSize="@dimen/text_size_10"
                android:paddingLeft="@dimen/space_15"
                android:gravity="center"
                />

        </LinearLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/space_5"
        android:paddingRight="@dimen/space_15"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <TextView
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="        验证码"
            android:textColor="@color/text_drak_black"
            android:textSize="@dimen/text_size_14"
            android:paddingLeft="@dimen/space_2"
            />

        <EditText
            android:id="@+id/edt_code"
            android:paddingLeft="@dimen/space_5"
            android:paddingTop="@dimen/space_10"
            android:paddingBottom="@dimen/space_10"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text=""
            android:textColor="@color/text_drak_black"
            android:textSize="@dimen/text_size_14"
            android:background="@drawable/gray_rond_bg"
            android:inputType="number"
            android:maxLength="11"
            />
    </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/space_5"
            android:paddingRight="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="投资金额"
                android:textColor="@color/text_drak_black"
                android:textSize="@dimen/text_size_14"
                android:paddingLeft="@dimen/space_15"
                />

            <EditText
                android:id="@+id/edt_money"
                android:paddingLeft="@dimen/space_5"
                android:paddingTop="@dimen/space_10"
                android:paddingBottom="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/text_drak_black"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/gray_rond_bg"
                android:inputType="number"
                android:maxLength="11"
                />
        </LinearLayout>

        <LinearLayout
            android:visibility="invisible"
            android:layout_marginTop="@dimen/space_5"
            android:paddingRight="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="手机验证码"
                android:textColor="@color/text_drak_black"
                android:textSize="@dimen/text_size_14"
                android:paddingLeft="@dimen/space_15"
                />

            <EditText
                android:paddingTop="@dimen/space_10"
                android:paddingBottom="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/text_drak_black"
                android:textSize="@dimen/text_size_14"
                android:background="@drawable/gray_rond_bg"
                android:inputType="number"
                android:maxLength="11"
                />
        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/space_15"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:text="取消"
                android:textColor="@color/color_primary"
                android:id="@+id/tv_cancel"
                />

            <View
                android:layout_width="@dimen/space_divider_1"
                android:layout_height="match_parent"
                android:background="@color/text_gray"/>

            <TextView
                android:id="@+id/tv_confrim"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="@dimen/text_size_14"
                android:text="立即投资"
                android:textColor="@color/color_primary"
                />

        </LinearLayout>

    </LinearLayout>
    
</RelativeLayout>