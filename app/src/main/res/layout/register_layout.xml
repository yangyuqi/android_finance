<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/login_pg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >

    <ImageView
        android:layout_marginTop="70dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/logn_app"
        />

    <LinearLayout
        android:layout_marginTop="70dp"
        android:orientation="vertical"
        android:background="@color/bg_main"
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_width="match_parent"
        android:layout_height="360dp">

        <LinearLayout
            android:layout_marginTop="@dimen/space_15"
            android:background="@color/bg_main"
            android:focusableInTouchMode="true"
            android:focusable="true"
            android:paddingLeft="@dimen/space_30"
            android:paddingRight="@dimen/space_30"
            android:layout_width="match_parent"
            android:layout_height="40dp"

            >
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/group_0_1"
                />

            <EditText
                android:id="@+id/edt_phone"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:hint="请输入手机号码"
                android:textColor="@color/text_drak_black"
                android:textSize="@dimen/text_size_13"
                android:background="@null"
                android:inputType="number"
                android:maxLength="11"
                />

            <Button
                android:id="@+id/btn_send"
                android:paddingRight="@dimen/space_15"
                android:background="@drawable/send_code_bg"
                android:layout_width="80dp"
                android:layout_height="33dp"
                android:layout_gravity="center_vertical"
                android:text="获取验证码"
                android:textColor="@color/bg_main"
                android:textSize="@dimen/text_size_10"
                android:paddingLeft="@dimen/space_15"
                android:gravity="center"
                />

        </LinearLayout>

        <View
            android:layout_marginTop="@dimen/space_8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"/>

        <EditText
            android:maxLength="6"
            android:id="@+id/edt_code"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:drawableLeft="@mipmap/group_1_2"
            android:inputType="number"
            android:gravity="center_vertical"
            android:hint="请输入验证码"
            android:drawablePadding="@dimen/space_10"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_drak_gray"
            />

        <View
            android:layout_marginTop="@dimen/space_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"/>


        <EditText
            android:maxLength="18"
            android:id="@+id/edt_pass"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:drawableLeft="@mipmap/group_0_2"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:hint="输入密码"
            android:drawablePadding="@dimen/space_10"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_drak_gray"
            />
        <View
            android:layout_marginTop="@dimen/space_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"/>

        <EditText
            android:id="@+id/edt_again_pas"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:drawableLeft="@mipmap/group_0_2"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:hint="重复密码"
            android:drawablePadding="@dimen/space_10"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_drak_gray"
            />

        <View
            android:layout_marginTop="@dimen/space_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"/>

        <EditText
            android:id="@+id/edt_invite_code"
            android:layout_marginRight="@dimen/space_30"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@null"
            android:inputType="textPassword"
            android:gravity="center_vertical"
            android:hint="填写邀请码(非必填)"
            android:drawablePadding="@dimen/space_10"
            android:textSize="@dimen/text_size_15"
            android:textColor="@color/text_drak_gray"
            />

        <View
            android:layout_marginTop="@dimen/space_5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"/>

        <Button
            android:id="@+id/btn_register"
            android:layout_marginTop="@dimen/space_10"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
            android:background="@drawable/send_code_bg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="注册"
            android:textColor="@color/bg_main"
            android:textSize="@dimen/text_size_15"
            android:gravity="center"
            />

        <LinearLayout
            android:paddingTop="@dimen/space_10"
            android:orientation="horizontal"
            android:paddingRight="@dimen/space_30"
            android:paddingLeft="@dimen/space_30"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <CheckBox
                android:id="@+id/cb"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />

            <TextView
                android:id="@+id/tv_register"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#585858"
                android:textSize="@dimen/text_size_13"
                android:text="我已阅读并同意"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_size_13"
                android:text="《投融网服务协议》"
                />

        </LinearLayout>

    </LinearLayout>

    </LinearLayout>

    <ImageView
        android:visibility="visible"
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_15"
        android:clickable="true"
        android:src="@mipmap/group_4_1"
        />

</RelativeLayout>