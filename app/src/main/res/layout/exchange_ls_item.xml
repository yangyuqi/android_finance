<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_two"
        android:background="@color/bg_main"
        android:paddingBottom="@dimen/space_7"
        android:paddingTop="@dimen/space_7"
        android:layout_width="match_parent"
        android:layout_height="45dp">


        <LinearLayout
            android:paddingLeft="@dimen/space_10"
            android:id="@+id/ll_book"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            >

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="充值时间"
            android:textColor="@color/text_drak_black"
            android:textSize="@dimen/text_size_12"
            />

            <ImageView
                android:visibility="gone"
                android:id="@+id/iv_book"
                android:layout_marginLeft="@dimen/space_1"
                android:layout_gravity="center_vertical"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/group__12"
                />

    </LinearLayout>
        <TextView
            android:textColor="@color/text_drak_black"
            android:id="@+id/tv_money"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="充值金额(元)"
            android:textSize="@dimen/text_size_13"
            />

        <TextView
            android:textSize="@dimen/text_size_13"
            android:textColor="@color/text_drak_black"
            android:id="@+id/tv_status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="状态"
            />

    </LinearLayout>

    <View
        android:layout_marginRight="@dimen/space_15"
        android:layout_marginLeft="@dimen/space_15"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_divider_1"
        android:background="@color/text_gray"/>

</LinearLayout>