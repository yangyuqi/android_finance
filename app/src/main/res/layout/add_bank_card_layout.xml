<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/bg_background"
        >

        <include layout="@layout/header_layout"/>

        <LinearLayout
            android:layout_marginTop="@dimen/space_5"
            android:gravity="center_vertical"
            android:background="@color/bg_main"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="真实姓名"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

            <EditText
                android:hint="请输入真实姓名"
                android:background="@null"
                android:id="@+id/tv_name"
                android:layout_marginRight="@dimen/space_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_14"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/bg_main"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证号"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

            <EditText
                android:maxLength="18"
                android:hint="请输入身份证号"
                android:background="@null"
                android:id="@+id/tv_card"
                android:layout_marginRight="@dimen/space_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_14"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/bg_main"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开户银行"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

            <EditText
                android:hint="请选择开户银行"
                android:background="@null"
                android:id="@+id/tv_bank"
                android:layout_marginRight="@dimen/space_18"
                android:layout_width="match_parent"
                android:drawableRight="@mipmap/group_11_2"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_14"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"/>


        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/bg_main"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="卡片类型"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

            <EditText
                android:hint="请选择卡片类型"
                android:background="@null"
                android:id="@+id/tv_bank_type"
                android:layout_marginRight="@dimen/space_18"
                android:layout_width="match_parent"
                android:drawableRight="@mipmap/group_11_2"
                android:layout_height="wrap_content"
                android:text="借记卡"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_14"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"/>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/bg_main"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="银行卡号"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

            <EditText
                android:hint="请输入银行卡号"
                android:background="@null"
                android:id="@+id/tv_card_num"
                android:layout_marginRight="@dimen/space_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_14"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

        </LinearLayout>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/bg_main"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号码"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

            <EditText
                android:inputType="number"
                android:hint="请输入银行预留手机号码"
                android:background="@null"
                android:id="@+id/tv_phone_num"
                android:layout_marginRight="@dimen/space_18"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_14"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

        </LinearLayout>
        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:background="@color/bg_main"
            android:layout_width="match_parent"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="验证码     "
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/space_15"
                android:textSize="@dimen/text_size_14"
                android:textColor="@color/text_drak_black"
                />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <EditText
                    android:inputType="number"
                    android:hint="请输入验证码"
                    android:background="@null"
                    android:id="@+id/tv_phone_code"
                    android:layout_marginRight="@dimen/space_18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/space_14"
                    android:textSize="@dimen/text_size_14"
                    android:textColor="@color/text_drak_black"
                    />

                <Button
                    android:id="@+id/btn_send_code"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/space_15"
                    android:layout_alignParentRight="true"
                    android:paddingRight="@dimen/space_15"
                    android:background="@drawable/send_code_bg"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:text="获取验证码"
                    android:textColor="@color/bg_main"
                    android:textSize="@dimen/text_size_10"
                    android:paddingLeft="@dimen/space_15"
                    android:gravity="center"
                    />

            </RelativeLayout>
        </LinearLayout>

        <View
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_divider_1"
            android:background="@color/text_gray"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"/>



        <Button
            android:id="@+id/btn_add_bank"
            android:layout_marginLeft="@dimen/space_30"
            android:layout_marginRight="@dimen/space_30"
           android:layout_marginTop="40dp"
            android:paddingRight="@dimen/space_15"
            android:background="@drawable/send_code_bg"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_vertical"
            android:text="提交"
            android:textColor="@color/bg_main"
            android:textSize="@dimen/text_size_10"
            android:paddingLeft="@dimen/space_15"
            android:gravity="center"
            />


    </LinearLayout>

</ScrollView>